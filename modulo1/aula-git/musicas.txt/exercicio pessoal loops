let dentesLimpos = 0; // começoçao
// 2 condicao de continua
while (dentesLimpos < 32) {
  console.log(" a quantidade de dentes limpos sao", dentesLimpos); // conjunto de acao
  dentesLimpos = dentesLimpos + 1;
}

let estomago = 0;
while ("estomago < 100") {
  console.log("quero mais coxinha", estomago);
  estomago = estomago + 10;
}
console.log("comi de mais", estomago);

